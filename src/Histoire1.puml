}

class Boisson{
    -m_nom : String
    +«create»Boisson(nom: string, Genre: genre)
    +getNomAvecArticleDefini(): String
    +getNomAvecArticleIndefini(): String
    +getNomAvecArticlePartitif(): String
    +getNomAvecPreposition(): String
